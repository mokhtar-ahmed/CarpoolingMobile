<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomWindowTitleBarBG"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:background="#FEFCFF"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/header"
        android:layout_width="55dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginTop="5dip"
        android:text="My Circles"
        android:textColor="#FF7F50"
        android:textSize="28sp"
         />

    <ImageView
        android:id="@+id/addCircle"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/stitle5" />

    <ImageView
        android:id="@+id/deleteCircle"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="fitEnd"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/delete" />

</RelativeLayout>