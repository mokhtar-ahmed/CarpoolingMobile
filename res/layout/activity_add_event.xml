<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/event_back" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:orientation="vertical">

	    
      <EditText
	        android:id="@+id/eventNameTxt"
	        android:layout_gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:maxLength="50"
	        android:hint="@string/event_name" 
	        android:textColorHint="#ffffff" 
	        android:drawableLeft="@drawable/ic_action_edit"
	        android:background="@drawable/text_back"
	        android:inputType="textPersonName" />

	   <TimePicker	
	        android:id="@+id/eventTimeTxt"
	        android:layout_gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>

		
		<DatePicker 
	      	android:id="@+id/eventDateTxt"
	        android:layout_gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         
	        />
		
		
		<Spinner
	       android:id="@+id/FromSpinner"
	       android:layout_gravity="center"
	       android:background="@drawable/text_back"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" />
		
		<Spinner
	       android:id="@+id/ToSpinner"
	       android:layout_gravity="center"
	       android:background="@drawable/text_back"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" />
		
		<Spinner
	       android:id="@+id/avaliableSlots"
	       android:layout_gravity="center"
	       android:background="@drawable/text_back"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" />
		
		<Spinner
	       android:id="@+id/circlesSpinner"
	       android:layout_gravity="center"
	       android:background="@drawable/text_back"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"/>
		
		
</LinearLayout>
</ScrollView>
